rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all images
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow users to upload their own meal images
    match /meals/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload meal photos (new path for camera captures)
    match /meal_photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload pixel art icons
    match /pixel_art/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload their profile images
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload city images (temporary, might want to restrict)
    match /cities/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}